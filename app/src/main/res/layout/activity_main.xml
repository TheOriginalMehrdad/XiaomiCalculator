<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:id="@+id/horizonScrollViewExp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:paddingEnd="9dp"
        android:scrollbars="none">

        <TextView
            android:id="@+id/txtExpression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="0"
            android:textAlignment="viewEnd"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_view_size_big" />

    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/horizonScrollViewRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:paddingEnd="9dp">

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:maxLines="1"
            android:textAlignment="viewEnd"
            android:textColor="?attr/colorPrimaryVariant"
            android:textSize="@dimen/text_view_size_small" />

    </HorizontalScrollView>

    <View
        android:layout_width="347dp"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/light_gray" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="13dp"
        android:layout_weight="8"
        android:weightSum="5"
        tools:ignore="InefficientWeight,UselessParent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/btnAc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AC"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/parenthesesOpen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="("
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_medium"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/parenthesesClose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=")"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_medium"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnDivision"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_medium"
                tools:ignore="ButtonStyle,HardcodedText" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/btnNumber7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnNumber8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnNumber9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnMultiplication"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="*"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_big"
                tools:ignore="ButtonStyle,HardcodedText" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/btnNumber4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnNumber5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnNumber6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnSubtraction"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_big"
                tools:ignore="ButtonStyle,HardcodedText" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/btnNumber1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnNumber2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnNumber3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnAddition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_big"
                tools:ignore="ButtonStyle,HardcodedText" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="UselessParent">

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:src="@drawable/ic_subtraction"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_big" />

            <Button
                android:id="@+id/btnNumber0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <ImageButton
                android:id="@+id/btnEqual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:src="@drawable/ic_equal"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_big" />


        </TableRow>


    </TableLayout>


</LinearLayout>