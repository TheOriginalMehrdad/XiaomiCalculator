<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context=".MainActivity">

    <TextView
        android:layout_weight="1"
        android:textAlignment="viewEnd"
        android:maxLines="1"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="33dp"
        android:layout_gravity="end"
        android:text="369"
        android:textSize="@dimen/text_view_size_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_weight="1"
        android:textAlignment="viewEnd"
        android:maxLines="1"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="33dp"
        android:layout_gravity="end"
        android:text="= 369"
        android:textSize="@dimen/text_view_size_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/light_gray"
        android:layout_width="347dp"
        android:layout_height="1dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="9dp"
        android:layout_weight="8"
        android:weightSum="4"
        tools:ignore="InefficientWeight,UselessParent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="UselessParent">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AC"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:text=">"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_medium"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="%"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_medium"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_medium"
                tools:ignore="ButtonStyle,HardcodedText" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="UselessParent">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="*"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_big"
                tools:ignore="ButtonStyle,HardcodedText" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="UselessParent">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_big"
                tools:ignore="ButtonStyle,HardcodedText" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="UselessParent">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_big"
                tools:ignore="ButtonStyle,HardcodedText" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="UselessParent">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AC"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_button_size_small"
                tools:ignore="ButtonStyle,HardcodedText" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:src="@drawable/ic_equal"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/text_button_size_big" />


        </TableRow>


    </TableLayout>

</LinearLayout>